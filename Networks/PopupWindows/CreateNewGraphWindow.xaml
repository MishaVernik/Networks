<Window x:Class="Networks.PopupWindows.CreateNewGraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Networks.PopupWindows"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        Background="BlanchedAlmond"
        Title="Create New Graph" Height="152.113" Width="253.119">
    <Grid>
        <Button x:Name="ButtonCreateGraph" Content="Create" HorizontalAlignment="Left" Margin="84,91,0,0" VerticalAlignment="Top" Width="75" Click="ButtonCreateGraph_Click"/>
        <TextBox x:Name="txtNumberOfNodes" HorizontalAlignment="Left" Height="23" Margin="118,13,0,0" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="txtAvgPower" HorizontalAlignment="Left" Height="23" Margin="118,41,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>
        <Label x:Name="label" Content="Number of nodes: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Average power: " HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
